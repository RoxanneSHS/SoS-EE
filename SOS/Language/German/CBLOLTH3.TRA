@0 = ~Dosstan golhyrrs, dosstan psuedo-Bhaal Mächte, sind iblith für mich {Eure Fallen, Eure Pseudo-Kräfte Bhaals, sind Abfall für mich}! Bhaal ist streea {Selbstmord}, Bhaal ist tot, und dosstan {Ihr selbst} werdet ihn ebenso ragar {finden}. ~
@1 = ~Lil waela lueth waela ragar brorna-lueth wund nind, kyorlin elghinn! {Die Närrischen und Unachtsamen finden Überraschungen - und unter ihnen wartet der Tod.} ~
@2 = ~Nindyn vel'uss kyorl nind ratha thalra elghinn dal Lil alust! {Wer auf seinen Rücken achtet, den trifft der Tod von vorn!} ~
@3 = ~"Diejenigen, die auf ihre Rücken achten", <PRO_RACE>, "trifft der Tod von vorne"~
@4 = ~"Der Dumme und Unvorsichtige findet Überraschungen - und unter ihnen wartet der Tod!" ~

